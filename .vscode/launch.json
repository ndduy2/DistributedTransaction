{
    "version": "0.2.0",
    "configurations": [
        {
            // Use IntelliSense to find out which attributes exist for C# debugging
            // Use hover for the description of the existing attributes
            // For further information visit https://github.com/dotnet/vscode-csharp/blob/main/debugger-launchjson.md
            "name": "OrderService",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/OrderService/bin/Debug/net7.0/OrderService.dll",
            "args": [],
            "cwd": "${workspaceFolder}/OrderService",
            "stopAtEntry": false,
            // Enable launching a web browser when ASP.NET Core starts. For more information: https://aka.ms/VSCode-CS-LaunchJson-WebBrowser
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
            "name": "PaymentService",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/PaymentService/bin/Debug/net7.0/PaymentService.dll",
            "args": [],
            "cwd": "${workspaceFolder}/PaymentService",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": "RestaurantService",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/RestaurantService/bin/Debug/net7.0/RestaurantService.dll",
            "args": [],
            "cwd": "${workspaceFolder}/RestaurantService",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        
        {
            "name": "DeliveryService",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/DeliveryService/bin/Debug/net7.0/DeliveryService.dll",
            "args": [],
            "cwd": "${workspaceFolder}/DeliveryService",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ],
    "compounds": [
        {
            "name": "All",
            "configurations": [
                "OrderService",
                "PaymentService",
                "RestaurantService",
                "DeliveryService"
            ],
            "stopAll": true,
            "preLaunchTask": "build",
        }
    ]
}